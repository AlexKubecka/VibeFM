@{
    ViewData["Title"] = "Home";
}

<div class="minimal-card">
<h1>Football Manager</h1>
<p>Welcome! Use the links below to view and manage your data:</p>

<ul class="minimal-list">
    <li><a asp-controller="Teams" asp-action="Index">Teams</a></li>
    <li><a asp-controller="Players" asp-action="Index">Players</a></li>
    <li><a asp-controller="StaffMembers" asp-action="Index">Staff Members</a></li>
</ul>

<form asp-action="SeedDatabase" method="post">
    <button type="submit" class="btn btn-primary">Seed Database from JSON</button>
</form>

@if (TempData["SeedResult"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SeedResult"]</div>
}
</div>
