@model FootballManager.Models.Team

@{
    ViewData["Title"] = "Team Details";
}

<h1>@Model.Name</h1>
<hr />
<dl class="row">

    <dt class="col-sm-2">League</dt>
    <dd class="col-sm-10">@Model.LeagueName</dd>

    <dt class="col-sm-2">Nationality</dt>
    <dd class="col-sm-10">@Model.Nationality</dd>

    <dt class="col-sm-2">Stadium Name</dt>
    <dd class="col-sm-10">@Model.StadiumName</dd>

    <dt class="col-sm-2">Stadium Capacity</dt>
    <dd class="col-sm-10">@Model.StadiumCapacity</dd>

    <dt class="col-sm-2">Value</dt>
    <dd class="col-sm-10">@Model.Value</dd>

    <dt class="col-sm-2">Reputation</dt>
    <dd class="col-sm-10">@Model.Reputation</dd>
</dl>

<h3>Players</h3>
@if (Model.Players != null && Model.Players.Any())
{
    <ul>
    @foreach (var player in Model.Players)
    {
        <li>
            <a asp-controller="Players" asp-action="Details" asp-route-id="@player.Id">@player.Name</a>
        </li>
    }
    </ul>
}
else
{
    <p>No players assigned.</p>
}

<h3>Staff Members</h3>
@if (Model.StaffMembers != null && Model.StaffMembers.Any())
{
    <ul>
    @foreach (var staff in Model.StaffMembers)
    {
        <li>
            <a asp-controller="StaffMembers" asp-action="Details" asp-route-id="@staff.Id">@staff.Name</a>
        </li>
    }
    </ul>
}
else
{
    <p>No staff members assigned.</p>
}

