@model IEnumerable<FootballManager.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<h1>Teams</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>League</th>
            <th>Nationality</th>
            <th>Stadium Name</th>
            <th>Stadium Capacity</th>
            <th>Value</th>
            <th>Reputation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var team in Model)
{
    <tr>
        <td><a asp-action="Details" asp-route-id="@team.Id">@team.Name</a></td>
        <td><a asp-controller="Leagues" asp-action="Details" asp-route-id="@team.LeagueName">@team.LeagueName</a></td>
        <td>@team.Nationality</td>
        <td>@team.StadiumName</td>
        <td>@team.StadiumCapacity</td>
        <td>@team.Value</td>
        <td>@team.Reputation</td>
    </tr>
}
    </tbody>
</table>