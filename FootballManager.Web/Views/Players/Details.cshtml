@model FootballManager.Models.Player

@{
    ViewData["Title"] = "Player Details";
}

<h1>@Model.Name</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Age</dt>
    <dd class="col-sm-10">@Model.Age</dd>

    <dt class="col-sm-2">Position</dt>
    <dd class="col-sm-10">@Model.Position</dd>

    <dt class="col-sm-2">Nationality</dt>
    <dd class="col-sm-10">@Model.Nationality</dd>


    <dt class="col-sm-2">Team</dt>
    <dd class="col-sm-10">
        @if (Model.Team != null)
        {
            <a asp-controller="Teams" asp-action="Details" asp-route-id="@Model.Team.Id">@Model.Team.Name</a>
        }
        else
        {
            <span>Free Agent</span>
        }
    </dd>

    <dt class="col-sm-2">Market Value</dt>
    <dd class="col-sm-10">â‚¬@Model.MarketValue m</dd>
    <dt class="col-sm-2">Morale</dt>
    <dd class="col-sm-10">@Model.GetMoraleDescription()</dd>
</dl>

<h3>Physical Attributes</h3>
<table class="table table-bordered w-auto">
    <tr>
        <th>Height (m)</th>
        <th>Weight (kg)</th>
        <th>Speed</th>
        <th>Stamina</th>
        <th>Strength</th>
        <th>Agility</th>
        <th>Jumping Reach</th>
    </tr>
    <tr>
        <td>@Model.Height</td>
        <td>@Model.Weight</td>
        <td>@Model.Speed</td>
        <td>@Model.Stamina</td>
        <td>@Model.Strength</td>
        <td>@Model.Agility</td>
        <td>@Model.JumpingReach</td>
    </tr>
</table>

